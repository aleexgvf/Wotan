<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#000"
        tools:ignore="ExtraText"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Toolbar
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWotan3"
            android:title="Pinturas"
            android:titleTextColor="#FFFFFF"
            android:titleMarginStart="50dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_flecha_atras"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageViewFlechaAtrasPinturas"
            android:layout_marginTop="10dp"/>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/scrollView2"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/LinearLayout">

                <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTextBlack"
                tools:context=".Fragments.PinturaInfo">

                <ImageView
                        android:layout_width="294dp"
                        android:layout_height="240dp"
                        android:src="@drawable/wotan_login"
                        android:id="@+id/imageViewPintura"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="14dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/textViewNombre"/>
                    <TextView
                            android:text="Nombre de la pintura"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewNombre"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintHorizontal_bias="0.089"
                            app:layout_constraintTop_toBottomOf="@+id/imageViewPintura"
                            app:layout_constraintBottom_toTopOf="@+id/ratingBar"/>

                <android.widget.RatingBar
                        android:layout_width="241dp"
                        android:layout_height="45dp"
                        android:id="@+id/ratingBar"
                        android:rating="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewNombre"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="96dp"/>
                <TextView
                        android:text="Descripcion"
                        android:textSize="16dp"
                        android:textColor="@color/colorTextWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewDescripcion"
                        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="254dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginBottom="9dp"
                        app:layout_constraintBottom_toTopOf="@+id/scrollView"/>
                <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion">

                    <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="match_parent">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:text="@string/Lorem"
                                android:id="@+id/textViewDesc"
                                app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion"
                                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="32dp" android:layout_marginStart="32dp"
                                app:layout_constraintHorizontal_bias="1.0"/>
                    </LinearLayout>
                </ScrollView>
            </android.support.constraint.ConstraintLayout>

            <fragment
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/fragment_rates"
                    class="com.example.desarrollador.museo_ar.Fragments.RatesFragment"/>
        </LinearLayout>


    </ScrollView>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            app:srcCompat="@drawable/ar2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/floatingActionButton"
            android:layout_marginBottom="34dp"
            app:backgroundTintMode="src_over"
            app:backgroundTint="@color/colorWotan1"/>

</RelativeLayout>






